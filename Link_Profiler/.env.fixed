# Link Profiler Environment Variables
# Copy this to .env and fill in your actual values

# Database Configuration - Update with your actual PostgreSQL credentials
LP_DATABASE_URL=postgresql://your_db_user:your_db_password@localhost:5432/link_profiler_db

# Redis Configuration  
LP_REDIS_URL=redis://localhost:6379/0

# Authentication - GENERATE A SECURE 32+ CHARACTER SECRET KEY
LP_AUTH_SECRET_KEY=your-super-secure-jwt-secret-key-here-change-this-to-something-random-and-long

# Monitoring Authentication
LP_MONITOR_PASSWORD=your-secure-monitor-password-here

# Mission Control Configuration
LP_MISSION_CONTROL_ENABLED=true
LP_WEBSOCKET_ENABLED=true
LP_DASHBOARD_REFRESH_RATE=1000
LP_MAX_WEBSOCKET_CONNECTIONS=100
LP_CACHE_TTL=60

# Optional: Additional API keys (leave empty if you don't have them)
LP_AI_OPENROUTER_API_KEY=
LP_DOMAIN_ABSTRACT_API_KEY=
LP_BACKLINK_REAL_API_KEY=
LP_SERP_REAL_API_KEY=
LP_PAGESPEED_API_KEY=
