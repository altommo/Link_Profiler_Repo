{
  "crawler": {
    "max_depth": 2,
    "max_pages": 500,
    "delay_seconds": 0.5,
    "timeout_seconds": 20,
    "respect_robots_txt": true,
    "follow_redirects": true,
    "extract_images": false,
    "extract_pdfs": false,
    "max_file_size_mb": 5
  },
  "queue": {
    "max_retries": 2,
    "retry_delay": 3,
    "priority_levels": [1, 5, 10],
    "heartbeat_interval": 15,
    "stale_timeout": 30
  },
  "monitoring": {
    "dashboard_refresh": 10,
    "max_job_history": 50,
    "performance_window": 1800
  },
  "logging": {
    "level": "DEBUG",
    "config": {
      "handlers": {
        "console": {
          "level": "DEBUG"
        },
        "file": {
          "level": "DEBUG"
        }
      },
      "loggers": {
        "Link_Profiler": {
          "level": "DEBUG"
        },
        "sqlalchemy": {
          "level": "INFO"
        },
        "redis": {
          "level": "INFO"
        },
        "playwright": {
          "level": "INFO"
        }
      }
    }
  }
}
