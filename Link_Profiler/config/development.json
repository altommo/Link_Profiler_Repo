{
  "crawler": {
    "max_depth": 2,
    "max_pages": 500,
    "delay_seconds": 0.5,
    "timeout_seconds": 20,
    "respect_robots_txt": true,
    "follow_redirects": true,
    "extract_images": false,
    "extract_pdfs": false,
    "max_file_size_mb": 5,
    "user_agent_rotation": false,
    "render_javascript": false,
    "extract_image_text": false,
    "crawl_web3_content": false,
    "crawl_social_media": false
  },
  "anti_detection": {
    "stealth_mode": true,
    "fingerprint_randomization": false,
    "human_like_delays": false,
    "request_header_randomization": false,
    "browser_fingerprint_randomization": false,
    "ml_rate_optimization": false,
    "anomaly_detection_enabled": false
  },
  "rate_limiter": {
    "history_size": 5,
    "success_factor": 0.95,
    "failure_factor": 1.8,
    "min_delay": 0.05,
    "max_delay": 30.0
  },
  "proxy_management": {
    "enabled": false,
    "proxy_list": [],
    "proxy_retry_delay_seconds": 300
  },
  "captcha_solving": {
    "enabled": false,
    "api_key": "your_dev_captcha_solving_api_key"
  },
  "anomaly_detection": {
    "enabled": false,
    "error_rate_threshold": 0.30,
    "empty_content_threshold": 50,
    "low_link_count_threshold": 1,
    "captcha_spike_threshold": 2,
    "captcha_time_window_seconds": 30,
    "crawl_rate_drop_threshold": 0.7,
    "history_window_size": 50,
    "unexpected_status_codes": [403, 429, 500, 503]
  },
  "browser_crawler": {
    "enabled": false,
    "headless": true,
    "browser_type": "chromium"
  },
  "social_media_crawler": {
    "enabled": false,
    "platforms": []
  },
  "quality_assurance": {
    "content_validation": false,
    "duplicate_detection": true,
    "spam_filtering": true,
    "data_quality_scoring": true
  },
  "queue": {
    "max_retries": 2,
    "retry_delay": 3,
    "priority_levels": [1, 5, 10],
    "heartbeat_interval": 15,
    "stale_timeout": 30
  },
  "monitoring": {
    "dashboard_refresh": 10,
    "max_job_history": 50,
    "performance_window": 1800
  },
  "logging": {
    "level": "DEBUG",
    "config": {
      "handlers": {
        "console": {
          "level": "DEBUG"
        },
        "file": {
          "level": "DEBUG"
        }
      },
      "loggers": {
        "Link_Profiler": {
          "level": "DEBUG"
        },
        "sqlalchemy": {
          "level": "INFO"
        },
        "redis": {
          "level": "INFO"
        },
        "playwright": {
          "level": "INFO"
        }
      }
    }
  }
}
