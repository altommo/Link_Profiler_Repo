{
  "crawler": {
    "max_depth": 2,
    "max_pages": 500,
    "delay_seconds": 0.5,
    "timeout_seconds": 20,
    "respect_robots_txt": true,
    "follow_redirects": true,
    "extract_images": false,
    "extract_pdfs": false,
    "max_file_size_mb": 5,
    "user_agent_rotation": false
  },
  "anti_detection": {
    "stealth_mode": true,
    "fingerprint_randomization": false,
    "human_like_delays": false,
    "request_header_randomization": false,
    "browser_fingerprint_randomization": false
  },
  "proxy_management": {
    "enabled": false,
    "proxy_list": [],
    "proxy_retry_delay_seconds": 300
  },
  "quality_assurance": {
    "content_validation": false,
    "duplicate_detection": true,
    "spam_filtering": true,
    "data_quality_scoring": true
  },
  "queue": {
    "max_retries": 2,
    "retry_delay": 3,
    "priority_levels": [1, 5, 10],
    "heartbeat_interval": 15,
    "stale_timeout": 30
  },
  "monitoring": {
    "dashboard_refresh": 10,
    "max_job_history": 50,
    "performance_window": 1800
  },
  "logging": {
    "level": "DEBUG",
    "config": {
      "handlers": {
        "console": {
          "level": "DEBUG"
        },
        "file": {
          "level": "DEBUG"
        }
      },
      "loggers": {
        "Link_Profiler": {
          "level": "DEBUG"
        },
        "sqlalchemy": {
          "level": "INFO"
        },
        "redis": {
          "level": "INFO"
        },
        "playwright": {
          "level": "INFO"
        }
      }
    }
  }
}
