{
  "crawler": {
    "max_depth": 5,
    "max_pages": 5000,
    "delay_seconds": 2.0,
    "timeout_seconds": 45,
    "respect_robots_txt": true,
    "follow_redirects": true,
    "extract_images": true,
    "extract_pdfs": true,
    "max_file_size_mb": 50
  },
  "queue": {
    "max_retries": 5,
    "retry_delay": 10,
    "priority_levels": [1, 3, 5, 7, 10],
    "heartbeat_interval": 60,
    "stale_timeout": 120
  },
  "monitoring": {
    "dashboard_refresh": 60,
    "max_job_history": 500,
    "performance_window": 7200
  }
}