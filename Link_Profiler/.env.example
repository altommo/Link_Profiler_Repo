# Redis Configuration
REDIS_URL=redis://localhost:6379
DEAD_LETTER_QUEUE_NAME=dead_letter_queue # New: Name of the Redis list for failed job messages

# Database Configuration  
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/link_profiler_db

# Queue System Configuration
MAX_SATELLITES=10
DEFAULT_QUEUE_PRIORITY=5
HEARTBEAT_INTERVAL=30

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Monitoring Configuration
MONITOR_PORT=8001
LOG_LEVEL=INFO

# Docker Configuration
COMPOSE_PROJECT_NAME=linkprofiler

# Environment
ENVIRONMENT=development
CONFIG_FILE=default.json

# External API Keys (optional)
ABSTRACT_API_KEY=your_abstract_api_key_here
USE_ABSTRACT_API=false
USE_OPENLINKPROFILER_API=false
USE_GSC_API=false

# ClickHouse Integration (optional)
USE_CLICKHOUSE=false
CLICKHOUSE_HOST=localhost
CLICKHOUSE_PORT=9000
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Crawler Configuration
RESPECT_ROBOTS_TXT=true # New: Set to 'false' to disable robots.txt adherence globally
